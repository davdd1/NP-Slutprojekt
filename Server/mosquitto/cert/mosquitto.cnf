[ req ]
default_bits        = 2048
prompt              = no
default_md          = sha256
distinguished_name  = req_distinguished_name
req_extensions      = req_ext

[ req_distinguished_name ]
C                   = SE
ST                  = Stockholm
O                   = STI
CN                  = mosquitto

[ req_ext ]
subjectAltName      = @alt_names
extendedKeyUsage    = serverAuth

[ alt_names ]
DNS.1               = mosquitto
DNS.2               = mosquitto-client
DNS.3               = localhost
IP.1                = 127.0.0.1
IP.2                = 192.168.1.100
IP.3                = 192.168.0.14
